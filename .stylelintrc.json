{
  "extends": "stylelint-config-prettier",
  "plugins": [
    "stylelint-scss",
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": true,
    "indentation": 2,
    "value-list-comma-newline-after": "never-multi-line",
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true
  }
}